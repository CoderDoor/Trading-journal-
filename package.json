{
  "name": "voice-trading-journal",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "author": "Gaurav",
  "description": "Voice-First AI-Powered Trade Journaling Application",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder --win --x64",
    "postinstall": "prisma generate"
  },
  "build": {
    "appId": "com.gaurav.voicetradingjournal",
    "productName": "Voice Trading Journal",
    "copyright": "Copyright Â© 2024 Gaurav",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "asar": false,
    "files": [
      "electron/**/*",
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*",
      "prisma/**/*",
      "node_modules/@prisma/**/*",
      "node_modules/.prisma/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/.prisma",
        "to": "app/node_modules/.prisma"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Voice Trading Journal",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    }
  },
  "dependencies": {
    "@prisma/client": "^5.14.0",
    "@xenova/transformers": "^2.17.2",
    "firebase": "^12.7.0",
    "next": "14.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.6.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^9.0.8",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "prisma": "^5.14.0",
    "typescript": "^5.4.5",
    "wait-on": "^9.0.3"
  }
}
